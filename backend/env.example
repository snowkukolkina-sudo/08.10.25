# Database Configuration
# Выберите базу данных: postgresql или sqlite3
DB_CLIENT=postgresql
DATABASE_URL=postgresql://dandy_user:dandy_password@localhost:5432/dandy_pos

# PostgreSQL настройки
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dandy_pos
DB_USER=dandy_user
DB_PASSWORD=dandy_password

# SQLite настройки (если DB_CLIENT=sqlite3)
DB_FILENAME=./database.sqlite

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://dandy_user:dandy_password@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=dandy_user
RABBITMQ_PASSWORD=dandy_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External APIs
OFD_API_URL=https://api.ofd.ru
FISCAL_API_URL=https://api.fiscal.ru
BANK_API_URL=https://api.bank.ru

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
